# Musaix Pro Environment Configuration Template
# SECURITY: Copy this file to .env and update with your secure values
# NEVER commit .env file to version control

# Database Configuration
DB_NAME=musaixpro_wp
DB_USER=wordpress
DB_PASSWORD=GENERATE_STRONG_PASSWORD_HERE_32_CHARS_MIN
DB_ROOT_PASSWORD=GENERATE_STRONG_ROOT_PASSWORD_HERE_32_CHARS_MIN

# WordPress Configuration
WP_ENV=development
WP_HOME=http://localhost:8080
WP_SITEURL=http://localhost:8080

# Site Configuration
SITE_TITLE=Musaix Pro
ADMIN_USER=admin
ADMIN_PASSWORD=GENERATE_STRONG_ADMIN_PASSWORD_HERE_16_CHARS_MIN
ADMIN_EMAIL=your-secure-email@yourdomain.com

# Security Configuration
WP_DEBUG=false
WP_DEBUG_LOG=false
WP_DEBUG_DISPLAY=false
SCRIPT_DEBUG=false

# WordPress Security Keys (Generate at: https://api.wordpress.org/secret-key/1.1/salt/)
# Uncomment and add these for production:
# WP_AUTH_KEY=
# WP_SECURE_AUTH_KEY=
# WP_LOGGED_IN_KEY=
# WP_NONCE_KEY=
# WP_AUTH_SALT=
# WP_SECURE_AUTH_SALT=
# WP_LOGGED_IN_SALT=
# WP_NONCE_SALT=

# Deployment Configuration (For production deployment only)
# DEPLOY_HOST=your-username@your-server-ip
# DEPLOY_USER=your-deployment-username
# DEPLOY_KEY_PATH=/path/to/your/ssh/key

# Production Configuration (Uncomment for production)
# FORCE_SSL_ADMIN=true
# WP_SITEURL=https://your-domain.com
# WP_HOME=https://your-domain.com